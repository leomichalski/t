<% add_decidim_page_title('Relatório de pontuação de usuários') %>

<div class="card with-overflow" id="processes">
  <div class="card-divider">
    <h2 class="card-title">
      <%= 'Relatório de pontuação de usuários' %>
      <!--

      -->
    </h2>
  </div>
  <div class="card-section">
    <div class="table-scroll">
      <table class="table-list">
        <thead>
          <tr>
            <th>
              Nome
            </th>
            <th>
              Criado em
            </th>
            <th>
              Atualizado em
            </th>
          </tr>
        </thead>
        <tbody>
          <% @statistic_settings.each do |statistic_setting| %>
            <tr>
              <td>
                <%= statistic_setting.name %>
              </td>
              <td>
                <%= l statistic_setting.created_at, format: :short %>
              </td>
              <td>
                <%= l statistic_setting.updated_at, format: :short %>
              </td>
              <td class="table-list__actions">
                <%= icon_link_to "data-transfer-download", '/', method: :get, class: "action-icon--export" %>
                <%= icon_link_to "pencil", '/', t("actions.configure", scope: "decidim.admin"), class: "action-icon--new" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
