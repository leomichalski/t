        <div class="lt-row" role="listitem">
            <div class="statistics__list-item">Número de propostas criadas </div>
            <div class="statistics__count text-blue-warm-vivid-70"> <%=statistics ? statistics.proposals_done : 0%> </div>
        </div>
    </div>
    <span class="br-divider"></span>
