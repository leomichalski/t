        <div class="lt-row" role="listitem">
            <div class="statistics__list-item">Seguidores nas suas propostas </div>
            <div class="statistics__count text-blue-warm-vivid-70"> <%=statistics ? statistics.follows_received : 0%> </div>
        </div>
    </div>
